<%- include('../includes/header.ejs', { titulo : 'Editar Categorias'}) %>

<main class="corpo-editar">
    <h2 class="margem">Editar Categoria</h2>

    <form action="/categorias/<%= categorias.id_categoria %>/editar" method="POST" class="form modal-body margem">
        <div class="form-group">
            <label for="nome" class="col-form-label">Nome da categoria:</label>
            <input class="form-control" type="text" id="nome" name="nome" value="<%= categorias.nome_categoria %>" required>
        </div>
        <div class="form-group mt-3"> 
        <button type="submit" class="btn btn-success botao"> Salvar Alterações </button>
        <a href="/categorias/" class="btn btn-secondary"> Cancelar </a>

        </div>    

        <% if (typeof mensagem != 'undefined') { %>
            <p class="erro"><% mensagem %></p>
        <% } %>
    </form>
</main>


